<div class="container">
<div class="card">
<h1>My tasks</h1>
</div>
<div class="card">
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>
</div>
<div class="card">
<div class="btn btn-outline-secondary btn-sm">
<%= link_to 'Create task', tasks_new_path %>
</div>
</div>
</div>
